@import './vars.styl'

.drop-area, .over
  display flex
  justify-content center
  align-items center
  flex-wrap wrap

.drop-area
  position relative
  border $gray dotted 2px
  text-align center
  margin-bottom 0.5em

.over
  background-color alpha(color2, 0.5)
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  z-index 105
  pointer-events none

.dropped
  border $color dashed 1px
  margin 0.125em
  background-color white
  cursor pointer

  &hover
    border-color $color2

    .icon svg
      fill $color2

  .name
    font-size 0.6em
    margin 0 0.5em 0.25em 0.5em

  .icon, .icon svg
    margin 0
    padding 0

  .icon svg
    fill $color
    background transparent
