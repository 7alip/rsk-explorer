@import './media_queries.styl'

$margin = 1rem
$min-col-w = 4rem

body, .wrapper
  margin 0
  border 0
  display flex
  flex-direction column
  overflow-x hidden

.wrapper
  min-height 100vh
  max-width 100%

.main, .cols, .home
  display flex
  flex 1 1 100%
  min-height 100vh
  flex-flow row wrap

.hero
  display flex
  flex 1 1 100%
  flex-flow row wrap

.col-a, .col-b
  flex 0 1 100%
  max-width 100%

.col-a
  order 1

.col-b
  order 2

@media $media_small
  .main
    margin 0 


  .col-a, .col-b
    margin 0
    flex 1 1 50%
    max-width 50%

  .hero 
    flex-flow row nowrap
    .col-a, .col-b
      flex 0 1 50%
      align-items flex-start

// Medium
@media $media_medium
  .main
    margin 0 5rem



// Large
@media $media_large
  .main
    margin 0 15rem

  .col-a
    margin 0

  .col-b
    margin 0
