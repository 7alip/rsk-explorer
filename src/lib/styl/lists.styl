ul.plain
  list-style none
  padding 0
  margin 0

ul.flex
  display flex
  flex-flow row wrap
  li
    flex 0 1 100%
  li.half
    flex 1 0 50%

dl 
  display inline-block
  clear both  
dt,dd
  float left
dt
  font-weight bold
  clear both
  margin-bottom 1em

dl.data
  dt 
    font-weight bold

ul.prev-next
  list-style none
  display flex
  justify-content space-between
  margin 0
  padding 0
  li 
    flex 0 1 auto
    margin 0
  .total 
    flex 2 0 auto
    text-align center  
  .prev
    margin-left 1em
    .icon, .svg-icon
      margin-right  1em
  .next
    margin-right 1em
    .icon, .svg-icon
      margin-left  1em