@import './buttons.styl'
@import './mixins.styl'

::-webkit-input-placeholder
  color $controls-color
  font-style italic

::-webkit-search-cancel-button
  /* Remove default */
  -webkit-appearance none
  height 0.75em
  width 0.75em
  background $dark

label
  margin-top 0.5em

label + input[type='range']
  display block

input
  defaultsColors()
  borders()

  &:focus
    focus()

input[placehoder], ::-moz-placeholder, input::-moz-placeholder
  text-overflow ellipsis

input.big
  font-size 1.125em

input[type='checkbox']
  appearance none
  border $color solid 0.1em
  width 1.1em
  height @width
  display inline-flex
  justify-content center
  align-items center

  &::after
    width 0.4em
    height @width
    content ''
    display block
    background trasparent

  &:checked
    &::after
      background $color