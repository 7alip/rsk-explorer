@import 'vars.styl'

.sticky-header
  position fixed
  z-index 1000
  min-width 100%

header
  background $bg-color
  box-shadow $tip-sh
  color brand2
  display flex
  flex-flow row nowrap
  align-items center
  min-height 3.25em
  justify-content space-between
  .brand
    display flex
    justify-content center
    align-items center
    
    .iso svg
      fill $color
    .logo
      color color1  
  .header-content
    flex 6
  .iso
    width 70px
    display inline-block
  .title
    
    h1
      font-size 1.5rem
      margin 0
      font-weight 400

  .nav
    flex 0 1 auto
    display flex
    justify-content flex-end
    align-items center

    a
      color color1
      &:hover
        color color2
    ul 
      list-style none
      display flex
      min-height 3em
      padding 0
      margin 0
      li
        min-height 100%
        display flex
        justify-content center
        align-items center
        padding 0 1em 
        &:first-child
          padding-left 2em
        &:last-child
          margin-right 1em  
        &.active, &.router-link-active
          border-bottom solid 2px color1